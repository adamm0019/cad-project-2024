<!--
  This is a partial view for a team card.
  It is used to display a team's details in a card format.
  The card includes the team's name, description, number of members, and number of projects.
  The card also includes actions to view and edit the team.
-->


<div class="card h-100 shadow-sm">
  <div class="card-body">
    <h5 class="card-title mb-2"><%= team.name %></h5>
    <p class="card-text text-muted"><%= team.description %></p>
    
    <div class="d-flex align-items-center mb-3">
      <i class="bi bi-people text-muted me-2"></i>
      <small class="text-muted"><%= pluralize(team.users.count, 'member') %></small>
    </div>

    <div class="d-flex align-items-center">
      <i class="bi bi-folder text-muted me-2"></i>
      <small class="text-muted"><%= pluralize(team.projects.count, 'project') %></small>
    </div>
  </div>

  <div class="card-footer bg-light border-top">
    <div class="btn-group w-100">
      <%= link_to team_path(team), class: "btn btn-outline-primary btn-sm" do %>
        <i class="bi bi-eye me-1"></i> View
      <% end %>
      <%= link_to edit_team_path(team), class: "btn btn-outline-secondary btn-sm" do %>
        <i class="bi bi-pencil me-1"></i> Edit
      <% end %>
    </div>
  </div>
</div>