<div class="container mt-4">
  <div class="card">
    <div class="card-body">
      <h2 class="card-title mb-4">Edit Project</h2>
      
      <%= form_with(model: @project, local: true) do |f| %>
        <% if @project.errors.any? %>
          <div class="alert alert-danger">
            <h6>Please fix the following errors:</h6>
            <ul class="mb-0">
              <% @project.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control", placeholder: "Enter project name" %>
        </div>

        <div class="mb-3">
          <%= f.label :description, class: "form-label" %>
          <%= f.text_area :description, class: "form-control", rows: 4, placeholder: "Enter project description" %>
        </div>

        <div class="mb-3">
          <%= f.label :status, class: "form-label" %>
          <%= f.select :status, 
            Project.statuses.keys.map { |s| [s.humanize, s] }, 
            {}, 
            class: "form-select" 
          %>
        </div>

        <div class="d-flex justify-content-end gap-2">
          <%= link_to 'Cancel', project_path(@project), class: "btn btn-light" %>
          <%= f.submit 'Update Project', class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
